<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net-net-1.0"/>
  </configSections>
  <log4net>
    <!-- 日志文件部分log输出格式的设定 -->
    <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="Logs\Log_"/>
      <appendToFile value="true"/>
      <rollingStyle value="Date"/>
      <datePattern value="yyyyMMdd'.txt'"/>
      <staticLogFileName value="false"/>
      <layout type="log4net.Layout.PatternLayout">
        <header value="------------------------------------------------------------"/>
        <ConversionPattern value="%date [%thread] %-5level %logger [%ndc] - %message%newline"/>
      </layout>
    </appender>
    <!-- Setup the root category, add the appenders and set the default level -->
    <!--<root>
      <level value="ALL"/>
      <appender-ref ref="ConsoleAppender"/>
      <appender-ref ref="RollingLogFileAppender"/>
    </root>-->
    <logger name="logerror">
      <level value="Info"/>
      <appender-ref ref="RollingLogFileAppender"/>
      <!--<appender-ref ref="LogSmtpAppender" />-->
    </logger>
    <logger name="loginfo">
      <level value="Info"/>
      <appender-ref ref="RollingLogFileAppender"/>
    </logger>

  </log4net>
  <connectionStrings>
    <add name="ExternalTradeDB" connectionString="Server=10.138.60.117;Database=ExtCredit;uid=sa;pwd=1234567a;" providerName="System.Data.SqlClient"/>
  </connectionStrings>
  <appSettings>
   
    <!--webservice url-->
    <add key="ForeignWebserviceUrl" value="http://10.7.101.39/mfs/services/searchService?wsdl"/>
    <!--合同机构号-->
    <add key="OrgCode" value="001"/>
    <!--设置上传的用户的信息状态（参考RequestState枚举）,如果为空就是默认为0。多个用逗号隔开-->
    <add key="RequestState" value=""/>
    <!--一设置上传指定日期文件夹名的征信用户信息。指定多个文件夹名用逗号隔开-->
    <add key="DirectoryNames" value=""/>

    <!--设置上传指定证件号码的征信用户信息，多个号用逗号隔开（这个条件设置与前面的DirectoryNames，RequestState设置条件是互斥的，如果两个都设置优先考虑DirectoryNames，RequestState）-->
    <add key="Cert_Nos" value=""/>

    <!--设置上传指定证件号码的征信用户信息，多个号用逗号隔开（这个条件设置与前面的DirectoryNames，RequestState，cert_no设置条件是互斥的，如果两个都设置优先考虑DirectoryNames，RequestState）-->
    <add key="Ids" value=""/>
  </appSettings>
</configuration>