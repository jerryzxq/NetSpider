<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net-net-1.0"/>
    <section name="RedisConfig" type="Vcredit.NetSpider.Cache.RedisConfigInfo, Vcredit.NetSpider.Cache"/>
  </configSections>
  <connectionStrings>
    <!--<add name="ExternalTradeDB" connectionString="Server=10.1.6.131;Database=ExtCredit;uid=nsreader;pwd=ns123!@#;" providerName="System.Data.SqlClient"/>-->
    <add name="ExternalTradeDB" connectionString="Server=10.138.60.117;Database=ExtCredit;uid=sa;pwd=1234567a;" providerName="System.Data.SqlClient"/>

    <!--<add name="ExternalTradeDB" connectionString="Server=10.1.6.131;Database=ExtCredit;uid=nswriter;pwd=nsW123!@#;" providerName="System.Data.SqlClient"/>-->
  </connectionStrings>
  <RedisConfig configSource="Configs\\RedisConfig.config"/>
  <appSettings>
    <!--请求文件存放的路径-->
    <add key="RequestFileSavePath" value="D:\ExtradeDataDirectory\Request\"/>
    <!--一天处理的请求文件的时间点（1-24 时）：在此时间之前，放在今天的请求，在此时间之后放在明天的请求。-->
    <add key="TodayDealingPoint" value="20"/>
    <!--用户代码-->
    <add key="UserCode" value="00301"/>
    <!--对重复上传用户控制时间-->
    <add key="UpLoadLimitedDays" value="90"/>
    <!--外贸征信一天最多处理的请求的数量-->
    <add key="EveryDayMaxDealingNum" value="10000"/>
    <!--webservice url-->
    <add key="ForeignWebserviceUrl" value="http://10.7.101.39:9001/mfs/services/searchService?wsdl"/>
    <!--合同机构号-->
    <add key="OrgCode" value="001"/>
    <!--0调用单笔接口查询，1调用批量接口查询-->
    <add key="SwitchInterfaceNum" value="1"/>
    <!--手写签名接口-->
    <add key="ComplianceServiceUrl" value="http://10.138.60.95:8181"/>
    <!--查询次数限制.Open:开启限制查功能、Close:关闭限制查询功能 -->
    <add key="ApplyLimitSwitch" value="OPEN"/>
    <!--业务类型-->
    <add key="CertReviseDays" value="0"/>
    <add key="AppID" value="1100101"/>
    <!--<add key="data" value="default"/>-->
    <add key="Apollo.DEV.Meta" value="http://10.138.60.78:8080"/>
  </appSettings>
  <log4net>
    <!-- 日志文件部分log输出格式的设定 -->
    <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="Logs/Log_"/>
      <appendToFile value="true"/>
      <rollingStyle value="Date"/>
      <datePattern value="yyyyMMdd'.txt'"/>
      <staticLogFileName value="false"/>
      <layout type="log4net.Layout.PatternLayout">
        <header value="------------------------------------------------------------&#xA;"/>
        <ConversionPattern value="%date [%thread] %-5level %logger [%ndc] - %message%newline"/>
      </layout>
    </appender>
    <!-- Setup the root category, add the appenders and set the default level -->
    <!--<root>
      <level value="ALL"/>
      <appender-ref ref="ConsoleAppender"/>
      <appender-ref ref="RollingLogFileAppender"/>
    </root>-->
    <logger name="logerror">
      <level value="error"/>
      <appender-ref ref="RollingLogFileAppender"/>
      <!--<appender-ref ref="LogSmtpAppender" />-->
    </logger>[ExtCredit].[credit].[CRD_CD_CreditUserInfo]
    <logger name="loginfo">
      <level value="Info"/>
      <appender-ref ref="RollingLogFileAppender"/>
    </logger>
  </log4net>
  <system.webServer>
    <httpProtocol>
      <customHeaders>
        <add name="Access-Control-Allow-Origin" value="*"/>
        <add name="Access-Control-Allow-Methods" value="GET, POST, PUT, DELETE, OPTIONS"/>
        <add name="Access-Control-Allow-Headers" value="x-requested-with,content-type"/>
      </customHeaders>
    </httpProtocol>
    <!--兼容IIS6与IIS7模式-->
    <validation validateIntegratedModeConfiguration="false"/>
    <modules runAllManagedModulesForAllRequests="true"/>
  </system.webServer>
  <system.serviceModel>
    <bindings/>
    <client/>
    <serviceHostingEnvironment aspNetCompatibilityEnabled="true"/>
    <standardEndpoints>
      <webHttpEndpoint>
        <!-- 
            Configure the WCF REST service base address via the global.asax.cs file and the default endpoint 
            via the attributes on the <standardEndpoint> element below
        -->
        <standardEndpoint name="" maxReceivedMessageSize="20000000" helpEnabled="true"/>
      </webHttpEndpoint>
    </standardEndpoints>
  </system.serviceModel>
  <!--
    有关 web.config 更改的说明，请参见 http://go.microsoft.com/fwlink/?LinkId=235367。

    可在 <httpRuntime> 标记上设置以下特性。
      <system.Web>
        <httpRuntime targetFramework="4.5" />
      </system.Web>
  -->
  <system.web>
    <compilation targetFramework="4.5" debug="true"/>
    <httpRuntime/>
    <pages controlRenderingCompatibilityVersion="4.0"/>
  </system.web>
</configuration>