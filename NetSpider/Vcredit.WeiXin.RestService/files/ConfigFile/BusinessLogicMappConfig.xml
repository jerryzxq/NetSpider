<?xml version="1.0" encoding="utf-8" ?>
<Config>
  <!--现在的配置维度有放贷方、服务方、产品种类、产品类型、资金来源-->
  <BusinessLogic ID="12" Description="杭州银行模式">
    <Conditions>
      <Condition>(bus.LendingSideKey=="COMPANY/HZYH_LENDING")</Condition>
    </Conditions>
    <SetValue>
      bus.PrincipalPunish = 0;
      bus.ServicePunish = 100;
      bus.BreachingRate = 0;
      bus.PenaltyRate = 0.001
    </SetValue>
  </BusinessLogic>

  <BusinessLogic ID="11" Description="P2P模式">
    <Conditions>
      <Condition>(bus.FundSource=="FUNDSOURCE/P2P")</Condition>
    </Conditions>
    <SetValue>
      bus.PrincipalPunish = 100;
      bus.ServicePunish = 0;
      bus.BreachingRate = 0.0005;
      bus.PenaltyRate = 0.0005
    </SetValue>
  </BusinessLogic>
  
  <BusinessLogic ID="10" Description="卡卡贷模式">
    <Conditions>
      <Condition>(bus.LoanKind=="LOANKIND/KAKADAI")</Condition>
    </Conditions>
    <SetValue>
		bus.ServicePunish = 0;
		local amount=0.005 * bus.LoanCapital
		if(amount&gt;200) then
			bus.PrincipalPunish = 200
		elseif(amount&lt;50) then
			bus.PrincipalPunish = 50
		else
			bus.PrincipalPunish = amount
		end
    </SetValue>
  </BusinessLogic>
  
  <BusinessLogic ID="6" Description="新的楼一贷模式">
    <Conditions>
      <Condition>(bus.LendingSideKey~="COMPANY/WX_SHJAWX_LENDING") and (bus.LoanKind=="LOANKIND/NEWLOUYIDAI") and (bus.ProductKind=="*")</Condition>
    </Conditions>
    <SetValue>
      bus.PrincipalPunish = 100;
      bus.ServicePunish = 100;
    </SetValue>
  </BusinessLogic>
  
  <BusinessLogic ID="4" Description="外贸模式">
    <Conditions>
      <Condition>(bus.LendingSideKey=="COMPANY/DWJM_LENDING") and (bus.ServiceSideKey=="*") and (bus.LoanKind~="LOANKIND/NEWLOUYIDAI") and (bus.ProductKind=="*")</Condition>
    </Conditions>
    <SetValue>
      bus.PrincipalPunish = 50;
      bus.ServicePunish = 50;
    </SetValue>
  </BusinessLogic>

  <BusinessLogic ID="5" Description="成都小贷模式">
    <Conditions>
      <Condition>(bus.LendingSideKey=="COMPANY/WX_CDWS_LENDING") and (bus.ServiceSideKey=="COMPANY/WX_CDWS_LENDING") and (bus.LoanKind=="*") and (bus.ProductKind=="*")</Condition>
      <Condition>(bus.LendingSideKey=="COMPANY/WX_CDWS_LENDING") and (bus.ServiceSideKey=="*") and (bus.LoanKind=="*") and (bus.ProductKind~="PRODUCTKIND/WUDIYADAIKUAN")</Condition>
    </Conditions>
    <SetValue>
      if (bus.ProductKind == "PRODUCTKIND/WUDIYADAIKUAN" and bus.LendingSideKey == "COMPANY/WX_CDWS_LENDING") then
      bus.PrincipalPunish = 50;
      bus.ServicePunish = 0;
      elseif(bus.ProductKind == "PRODUCTKIND/CHEDAI" and bus.LendingSideKey == "COMPANY/WX_CDWS_LENDING") then
      bus.PrincipalPunish = 100;
      bus.ServicePunish = 0;
      else
      bus.PrincipalPunish = 50;
      bus.ServicePunish = 50;
      end
    </SetValue>
  </BusinessLogic>

  <BusinessLogic ID="7" Description="成都小贷国开行的模式">
    <Conditions>
      <Condition>(bus.LendingSideKey=="COMPANY/WX_CDWS_LENDING") and (bus.ServiceSideKey~="COMPANY/WX_CDWS_LENDING") and (bus.LoanKind=="*") and (bus.ProductKind=="PRODUCTKIND/WUDIYADAIKUAN")</Condition>
      <Condition>(bus.LendingSideKey=="COMPANY/WX_QDWX_LENDING") and (bus.ServiceSideKey~="COMPANY/WX_CDWS_LENDING") and (bus.LoanKind=="*") and (bus.ProductKind=="*")</Condition>
    </Conditions>
    <SetValue>
      bus.PrincipalPunish = 50;
      bus.ServicePunish = 50;
    </SetValue>
  </BusinessLogic>
  
 

  <BusinessLogic ID="9" Description="静安小贷无抵押">
    <Conditions>
      <Condition>(bus.LendingSideKey=="COMPANY/WX_SHJAWX_LENDING") and (bus.ServiceSideKey=="*") and (bus.LoanKind=="*") and (bus.ProductKind=="PRODUCTKIND/WUDIYADAIKUAN")</Condition>
    </Conditions>
    <SetValue>
      bus.PrincipalPunish = 50; 
      bus.ServicePunish = 50;
	  bus.LendingSideID = bus.ServiceSideID
    </SetValue>
  </BusinessLogic>

  <BusinessLogic ID="8" Description="静安小贷抵押">
    <Conditions>
      <Condition>(bus.LendingSideKey=="COMPANY/WX_SHJAWX_LENDING") and (bus.ServiceSideKey=="*") and (bus.LoanKind=="*") and (bus.ProductKind=="PRODUCTKIND/FANGDAI")</Condition>
    </Conditions>
    <SetValue>
      bus.PrincipalPunish = 100;
      bus.ServicePunish = 0;
	  bus.LendingSideID = bus.ServiceSideID
    </SetValue>
  </BusinessLogic>

  <BusinessLogic ID="2" Description="沪苏车贷模式">
    <Conditions>
      <Condition>(bus.LendingSideKey=="COMPANY/WX_SZWX_LEASE") and (bus.ServiceSideKey=="*") and (bus.LoanKind=="*") and (bus.ProductKind=="*")</Condition>
      <Condition>(bus.LendingSideKey=="COMPANY/WX_SZWX_LEASE_SH") and (bus.ServiceSideKey=="*") and (bus.LoanKind=="*") and (bus.ProductKind=="*")</Condition>
      <Condition>(bus.LendingSideKey=="COMPANY/DONGYAYINGHANG") and (bus.ServiceSideKey=="*") and (bus.LoanKind=="*") and (bus.ProductKind=="*")</Condition>
      <Condition>(bus.LendingSideKey=="COMPANY/GONGSHANGYINHANG") and (bus.ServiceSideKey=="*") and (bus.LoanKind=="*") and (bus.ProductKind=="*")</Condition>
    </Conditions>
    <SetValue>
      if(bus.ProductKind == "PRODUCTKIND/CHEDAI" and bus.LendingSideKey == "COMPANY/WX_SZWX_LEASE") then
      bus.PrincipalPunish = 100;
      bus.ServicePunish = 0;
      else
      bus.PrincipalPunish = 50;
      bus.ServicePunish = 50;
      end
    </SetValue>
  </BusinessLogic>
</Config>